{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "allowJs": true,
        "declaration": true,
        "module": "nodenext",
        "lib": ["dom", "esnext"],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "isolatedModules": true,
        "noUnusedLocals": true
    },
    "include": ["src/**/*", "src/.setup.ts"],
    "exclude": []
}

