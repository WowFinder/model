{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "module": "nodenext",
        "lib": ["dom", "esnext"],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "dist",
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": []
}
